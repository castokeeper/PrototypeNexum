# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================

# PostgreSQL Connection String
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
DATABASE_URL="postgresql://reinscripciones_app:tu_password_seguro_aqui@localhost:5432/reinscripciones_db"

# Alternativa para desarrollo local
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/reinscripciones_db"

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================

# Puerto del servidor backend
PORT=3001

# Entorno (development, production, test)
NODE_ENV=development

# ============================================
# AUTENTICACIÓN
# ============================================

# Secret para JWT (generar uno seguro en producción)
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion

# Tiempo de expiración del token (en segundos)
JWT_EXPIRATION=86400

# ============================================
# ALMACENAMIENTO DE ARCHIVOS
# ============================================

# Directorio para guardar archivos subidos
UPLOAD_DIR=./uploads

# Tamaño máximo de archivo en bytes (5MB)
MAX_FILE_SIZE=5242880

# ============================================
# CORS
# ============================================

# Origen permitido para CORS (frontend)
CORS_ORIGIN=http://localhost:5173

# ============================================
# OTROS
# ============================================

# Nivel de log (error, warn, info, debug)
LOG_LEVEL=debug

# ============================================
# PRODUCCIÓN
# ============================================

# En producción, usar variables de entorno del proveedor:
# - Heroku: DATABASE_URL se configura automáticamente
# - Vercel: Configurar en el dashboard
# - Railway: Configurar en el dashboard
# - AWS/Azure/GCP: Usar servicios de secretos

