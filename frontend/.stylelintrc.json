{
    "extends": [],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer",
                    "theme",
                    "config",
                    "utility",
                    "plugin"
                ]
            }
        ],
        "function-no-unknown": [
            true,
            {
                "ignoreFunctions": [
                    "theme",
                    "screen"
                ]
            }
        ],
        "no-descending-specificity": null,
        "declaration-block-trailing-semicolon": null,
        "no-empty-source": null
    }
}